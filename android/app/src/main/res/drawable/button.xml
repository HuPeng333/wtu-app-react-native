<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
        android:exitFadeDuration="200">
    <!--按下点击-->
    <item android:state_pressed="true" android:state_enabled="true">
        <ripple android:color="#D0013E81">
            <item>
                <shape >
                    <!--背景色-->
                    <solid android:color="#007aff"/>
                    <!-- 设置按钮的四个角为弧形 -->
                    <!-- android:radius 弧形的半径 -->
                    <corners android:radius="20dip" />
                    <padding
                            android:bottom="10dp"
                            android:left="10dp"
                            android:right="10dp"
                            android:top="10dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <!--正常状态-->
    <item android:state_pressed="false" android:state_enabled="false">
        <ripple android:color="#007aff">
            <item>
                <shape >
                    <!-- 背景色 -->
                    <solid android:color="#007aff"/>
                    <corners android:radius="20dip" />
                    <padding
                            android:bottom="10dp"
                            android:left="10dp"
                            android:right="10dp"
                            android:top="10dp" />
                </shape>
            </item>
        </ripple>
    </item>



</selector>